<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Vista de Productos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />

</head>

<body>
    <div>
        <div>
            <h1>Vista de Productos</h1>
            <br>

            <% if(productos.length){ %>
                <div>
                    <table>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                        </tr>
                        <%productos.forEach(function(producto) {%>
                            <tr>
                                <td>
                                    <%=producto.nombre%>
                                </td>
                                <td>
                                    <%=producto.precio%>
                                </td>
                                <td><img width="50" src=<%=producto.imagen%> alt="not found"></td>
                            </tr>
                            <%});%>
                    </table>
                </div>
                <% } else{ %>
                    <h3 class="alert alert-warning">No se encontraron productos</h3>
                    <% } %>

                        <br>
                        <a href="/" type="button" class="btn btn-primary">Cargar un nuevo producto</a>

        </div>
    </div>


</body>

</html>